<?xml version="1.0" encoding="UTF-8" ?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <bean id = "byIndex" class="service.HelloFactory" factory-method="newInstance">
        <constructor-arg index="0" value="byIndex"/>
    </bean>
    <bean id = "byType" class="service.HelloFactory" factory-method="newInstance">
        <constructor-arg type="java.lang.String" value="byType"/>
    </bean>
    <bean id = "byName" class="service.HelloFactory" factory-method="newInstance">
        <constructor-arg name="message" value="byName"/>
    </bean>
</beans>
